<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/total_price"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_medium_size"
            android:text="Cena tankowania: "/>

        <TextView
            android:id="@+id/refuel_total_price"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/total_price"
            android:textSize="@dimen/text_medium_size" />

        <TextView
            android:id="@+id/price"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/total_price"
            android:textSize="@dimen/text_medium_size"
            android:text="Cena za litr: "/>

        <TextView
            android:id="@+id/refuel_fuel_price"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/total_price"
            android:layout_toEndOf="@+id/price"
            android:textSize="@dimen/text_medium_size" />

        <TextView
            android:id="@+id/fuel_volume"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/price"
            android:textSize="@dimen/text_medium_size"
            android:text="Zatankowano: "/>

        <TextView
            android:id="@+id/refuel_fuel_volume"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/price"
            android:layout_toEndOf="@+id/fuel_volume"
            android:textSize="@dimen/text_medium_size" />

        <TextView
            android:id="@+id/distance"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/fuel_volume"
            android:textSize="@dimen/text_medium_size"
            android:text="Przejechany dystans: "/>

        <TextView
            android:id="@+id/refuel_distance"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fuel_volume"
            android:layout_toEndOf="@id/distance"
            android:textSize="@dimen/text_medium_size" />

        <TextView
            android:id="@+id/refuel_total_distance"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/refuel_distance"
            android:textSize="@dimen/text_medium_size"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/edit_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentEnd="true"
            android:src="@android:drawable/ic_menu_edit"
            android:tint="@color/colorAccent" />

        <ImageView
            android:id="@+id/delete_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="60dp"
            android:layout_alignParentEnd="true"
            android:src="@android:drawable/ic_menu_delete"
            android:tint="@color/colorAccent" />

    </RelativeLayout>
</android.support.v7.widget.CardView>