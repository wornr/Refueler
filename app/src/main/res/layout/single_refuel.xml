<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="6dp"
    app:cardCornerRadius="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="horizontal"
        android:padding="6dp"
        android:baselineAligned="false">

        <LinearLayout
            android:id="@+id/single_refuel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/refuel_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_medium_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/refuel_fuel_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/distance_rectangle"
                    android:textSize="@dimen/text_small_size"
                    android:textColor="@android:color/white"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:paddingEnd="3dp"
                    android:paddingStart="3dp"
                    android:gravity="end" />

                <TextView
                    android:id="@+id/refuel_fuel_volume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/distance_rectangle"
                    android:backgroundTint="@android:color/holo_blue_light"
                    android:textSize="@dimen/text_small_size"
                    android:textColor="@android:color/white"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:paddingEnd="3dp"
                    android:paddingStart="3dp"
                    android:gravity="end" />

                <TextView
                    android:id="@+id/refuel_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/distance_rectangle"
                    android:backgroundTint="@android:color/holo_green_light"
                    android:textSize="@dimen/text_small_size"
                    android:textColor="@android:color/white"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:paddingEnd="3dp"
                    android:paddingStart="3dp"
                    android:gravity="end" />
            </LinearLayout>

            <TextView
                android:id="@+id/refuel_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/distance_rectangle"
                android:backgroundTint="@android:color/holo_red_light"
                android:textSize="@dimen/text_small_size"
                android:textColor="@android:color/white"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:paddingEnd="3dp"
                android:paddingStart="3dp"
                android:gravity="end" />
        </LinearLayout>

        <ImageView
            android:id="@+id/edit_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:src="@android:drawable/ic_menu_edit"
            android:tint="@color/cardViewIcons"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/edit" />

        <ImageView
            android:id="@+id/delete_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:src="@android:drawable/ic_menu_delete"
            android:tint="@color/cardViewIcons"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/delete" />
    </LinearLayout>
</android.support.v7.widget.CardView>